<div class="container">
    <%- include("partials/sidebar") -%>

    <div class="cats">
        <h1>Task Categories</h1>
        <% categories.forEach(function(index) { %>
            <div class="task">
                <a href="/task/<%= index.title%>">
                    <h2><%= index.title %></h2>
                    <p class="category-desc-display"><%= index.desc %></p>
                    <p>Created <%= index.createTime.toDateString() %></p>
                    <form action="/list/delete"></form>
                </a>
            </div>
        <% }); %>
        <div class="task new-cat">
            <a href="./compose-category"> <h3>+</h3> </a>
        </div>
    </div>
</div>

